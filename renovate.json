{
  "extends": ["config:recommended"],
  "schedule": ["every weekend"],
  "timezone": "UTC",
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": false,
      "groupName": "non-major dependencies"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": false,
      "groupName": "dev dependencies (patch)"
    },
    {
      "matchPackageNames": ["react", "react-dom"],
      "groupName": "react core"
    },
    {
      "matchPackageNames": ["@reduxjs/toolkit", "react-redux", "redux-persist"],
      "groupName": "redux packages"
    },
    {
      "matchPackageNames": ["express", "mongoose", "mongodb"],
      "groupName": "backend core"
    },
    {
      "matchPackagePatterns": ["^@dnd-kit/"],
      "groupName": "dnd-kit packages"
    },
    {
      "matchPackagePatterns": ["eslint", "prettier"],
      "groupName": "linting and formatting"
    },
    {
      "matchPackageNames": ["firebase"],
      "groupName": "firebase"
    },
    {
      "matchPackageNames": ["swiper"],
      "groupName": "swiper"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": false
  },
  "labels": ["dependencies"],
  "assignees": ["@kimamovic21"]
}
